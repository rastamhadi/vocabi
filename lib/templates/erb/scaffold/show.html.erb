<div class="page-header">
  <h1><%%= <%= singular_table_name.classify %>.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <%- attributes.each do |attribute| -%>
  <dt><strong><%%= <%= singular_table_name.classify %>.human_attribute_name(:<%= attribute.column_name %>) %>:</strong></dt>
  <dd><%%= @<%= singular_table_name %>.<%= attribute.column_name %> %></dd>
  <%- end -%>
</dl>

<%%= link_to t('helpers.links.back'), <%= index_helper %>_path, class: 'btn btn-default'  %>
<%%= link_to t('helpers.links.edit'), edit_<%= singular_route_name %>_path(@<%= singular_table_name %>), class: 'btn btn-primary' %>
<%%= link_to t('helpers.links.destroy'), @<%= singular_table_name %>, method: 'delete', data: { confirm: t('helpers.links.confirm') }, class: 'btn btn-danger' %>
